<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded"
        >
        <View
            android:id="@+id/status_indicator"
            android:layout_width="10dp"
            app:layout_constraintEnd_toStartOf="@+id/tv_deadOr"
            app:layout_constraintStart_toEndOf="@+id/iv_image"
            app:layout_constraintTop_toBottomOf="@id/tv_name"
            android:layout_height="10dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/circle_indicator" />
        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_launcher_background"
            android:clipToOutline="true"
            android:background="@drawable/rounded"/>
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/iv_image"
            app:layout_constraintTop_toTopOf="parent"
            android:text="BlUE DIPLOMAT"
            android:textColor="@color/white"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_deadOr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_name"
            app:layout_constraintStart_toEndOf="@+id/iv_image"
            android:text="ALIVE"
            android:textSize="10dp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tv_rase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="170dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_name"
            android:text="ALIEN"
            android:textSize="10dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tv_loc1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/iv_image"
            app:layout_constraintTop_toBottomOf="@+id/tv_deadOr"
            android:text="Last known location :"
            android:textSize="6dp"
            android:layout_marginStart="10dp"
            android:textColor="#998787"/>
        <TextView
            android:id="@+id/tv_loc2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/iv_image"
            app:layout_constraintTop_toBottomOf="@+id/tv_loc1"
            android:text="Last known location :"
            android:textSize="8dp"
            android:layout_marginStart="10dp"
            android:textColor="#FFFFFF"/>
        <TextView
            android:id="@+id/tv_seein1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/iv_image"
            app:layout_constraintTop_toBottomOf="@+id/tv_loc2"
            android:text="First see in :"
            android:textSize="6dp"
            android:layout_marginStart="10dp"
            android:textColor="#998787"/>
        <TextView
            android:id="@+id/tv_seein2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/iv_image"
            app:layout_constraintTop_toBottomOf="@+id/tv_seein1"
            android:text="Last known location :"
            android:textSize="8dp"
            android:layout_marginStart="10dp"
            android:textColor="#FFFFFF"/>






    </androidx.constraintlayout.widget.ConstraintLayout>



</FrameLayout>